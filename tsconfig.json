{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist/",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "strict": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "jsx": "react"
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}